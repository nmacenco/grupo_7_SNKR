<div class="cabecera">
   <p> ¡Envios gratis a todo el país! </p>
</div>
<div class="main-header">
    <a href="/" id="logo">
        <img src="/images/logosimple.png" alt="Venta zapatillas">
    </a>

    <form action='/products/search' method='GET' class="search">
    <div class="inputSearch">
        <input type="text" placeholder="Buscar..." class="search2" name="search">
        <button type="submit" value="search" class="botonBusqueda"><i class="fas fa-search"></i></button>
    </div>
    </form>

    <div class="login-cart" >

        <% if (locals.isLogged) {  %>
        <div class="user-logged">
