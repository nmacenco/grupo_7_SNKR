            <a href="/users/profile"> <%= locals.userLogged.first_name %>  </a>
             <!-- locals.userLogged.last_name -->
        </div>
        
        <div class="logout">
            <a href="/users/logout">Logout</a>
        </div>
        <% } else {  %>
        <div >
            <a id="login" href="/users/login">
                <i class="fas fa-user"></i>
            </a>
        </div>
        <% } %>

        <div>
            <a id="cart" href="/products/cart">
                <i class="fas fa-shopping-cart"></i>
            </a>
        </div>


    </div>  
</div>
