<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
</head>
<body>
    <header >
        <%- include ('./partials/header') %>
    </header>



    <main>
        <div class="filtrosAplicados">
            <span>SNKR <i class="fas fa-arrow-right"></i> HOMBRE <i class="fas fa-arrow-right"></i> NIKE</span>
        </div>

        <hr class="separacionFiltrosProducto">

        
        <section class="producto">
            
            <i class="fas fa-arrow-left"></i>
            <img  class="fotoProducto" src="/images/products/<%= producto.image%>" alt="altas jordan 1">
            <i class="fas fa-arrow-right"></i>
            

            <div class="detalleProducto">
                
                <% if (locals.isAdmin) { %>
                    <div class="cajaBoton">
                        <div class="editarYBorrarProducto">
                            <a href="/products/edit/<%= producto.id_product %>" class="botonEditarProducto">EDITAR PRODUCTO</a>
                                <form action="/products/<%= producto.id_product%>?_method=DELETE" method="POST" style="display: inline-flex">
                                    <button type="submit" class="botonEliminarProducto">ELIMINAR PRODUCTO</button>
                                </form>
                        </div>
                    </div>
                <% } %>
                 
                <div>
                    <p class="tituloZapas"><%= producto.name %></p>
                    <p class="precioZapas">$<%= producto.price%></p>
                </div>

                <hr class="separacionTituloTalles">
            <form action="/cart/add/<%= producto.id_product %>" method="POST" id="formulario">

                <div class="cajatalles">
                    <div class="container-datos">
                        <div  class="talle-color-cantidad">
                            <p class="talle">Talle</p>
                            <select class="opciones-detalle" name="size" id="size">
                                <%sizes.forEach(size =>{ %>
                                    <option value="<%= size.id_size %>">
                                        <%= size.size %>
                                    </option><br>
                                <% }) %>
                            </select>
                        </div>
                        <div class="talle-color-cantidad">
                            <p class="talle">Color</p>
                            <select class="opciones-detalle" name="color" id="color">
                                <%colors.forEach(color =>{ %>
                                    <option value="<%= color.id_color %>">
                                        <%= color.color %>
                                    </option><br>
                                <% }) %>
                            </select>
                        </div>
                        <div class="talle-color-cantidad">
                            <p class="talle">Cantidad</p>
                            <input class="opciones-detalle" type="number" name="cantidad" id="compra" value="1">
                        </div>
                    </div>
                    
                    <div class="cajaBoton">
                        <button type="submit" class="botonCompra">AGREGAR AL CARRITO</button>    
                    </div>

                    <div class="compartirPublicacion">
                        <span id="compartirLabel">Compartir</span>
                        <span><i class="fab fa-whatsapp"></i></span>
                        <span><i class="fab fa-instagram"></i></span>
                        <span><i class="fab fa-twitter"></i></span>
                        <span><i class="fab fa-facebook"></i></span>
                    </div>
                </div>
            </form>
        </section>

        <section class="cajaDescripcion">

            <p class="tituloDescripcion">DESCRIPCIÃ“N</p>
            <p class="descripcionDescripcion"><%= producto.detail %></p>

        </section>
        


        <p class="tituloRecomendados">RECOMENDADOS PARA VOS</p>

        <section class="recomendados">
            <div class="flechas-detail"><i class="fas fa-arrow-left"></i></div>
            <article class="cajaProductoRecomendado">
                <img class="fotoRecomendados" src="/images/products/airforce107wb.png">
                <div>
                    <p class="descripcionRecomendados">Zapatillas Nike Air Force 1 07' Wb</p>
                    <p class="precioRecomendados">$12.999</p>
                </div>
            </article>
            <article class="cajaProductoRecomendado">
                <ul>
                    <img  class="fotoRecomendados" src="/images/products/jordan1low.png" alt="">
                    <div class="cajaProductos">
                        <p class="descripcionRecomendados">Zapatillas Air Jordan 1</p>
                        <p class="precioRecomendados">$17.999</p>
                    </div>
                </ul>
            </article>
            <article class="cajaProductoRecomendado">
                <ul>
                    <div><img  class="fotoRecomendados" src="/images/products/pumaRS-Xbold.png" alt=""></div>
                    <div class="cajaProductos">
                        <p class="descripcionRecomendados">Zapatillas Puma RS-X Bold</p>
                        <p class="precioRecomendados">$13.500</p>
                    </div>
                </ul>
            </article>
            <article class="cajaProductoRecomendado">
                <ul>
                    <div> <img  class="fotoRecomendados" src="/images/products/airmax200SE.png" alt="altas jordan 1"> </div>
                    <div class="cajaProductos">
                        <p class="descripcionRecomendados">Zapatillas Nike Air Max 200 SE</p>
                        <p class="precioRecomendados">$19.999</p>
                    </div>
                </ul>
            </article>
            <div class="flechas-detail"><i class="fas fa-arrow-right"></i></div>
        </section>

    </main>

    
    <footer>
        <%- include ('./partials/footer') %>
    </footer>

    <script src="/js/productDetail.js"></script>

</body>
</html>